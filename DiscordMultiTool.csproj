<Project Sdk="Microsoft.NET.Sdk">

<PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <Company>MasterSharp Team LLC.</Company>
    <Version>3.0.0</Version>
    <Copyright>MasterSharp OpenSource Team</Copyright>
    <PackageProjectUrl>https://github.com/CodeSharp3210/DiscordMultiTool</PackageProjectUrl>
    <RepositoryUrl>https://github.com/CodeSharp3210/DiscordMultiTool</RepositoryUrl>
    <Title>DiscordMultiTool</Title>
    <Authors>MasterSharp Team LLC.</Authors>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <ApplicationIcon>NEW-LOGO.ico</ApplicationIcon>
    
    <!-- Single File Publish Settings -->
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.1.0" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.1.0" />
    <PackageReference Include="Avalonia.Desktop" Version="11.1.0" />
    <PackageReference Include="Avalonia.Diagnostics" Version="11.1.0" />
    <PackageReference Include="DiscordRichPresence" Version="1.6.1.70" />
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <PackageReference Include="System.Diagnostics.EventLog" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <AvaloniaResource Include="NEW LOGO.png" />
  </ItemGroup>

</Project>
